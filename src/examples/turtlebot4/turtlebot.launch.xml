<launch>
    <arg name="robot_description_package" default = "turtlebot4_whoami"/>
    <arg name="game_launcher" default = ""/>

    <arg name="max_lines" default = "100"/>
    <arg name="include_meta" default = "true"/>
    <arg name="clear_on_retrieval" default = "true"/>

    <node pkg="rai_whoami" exec="rai_whoami_node" name="rai_whoami_node" output="screen">
        <param name="robot_description_package" value="$(var robot_description_package)" />
    </node>
    <node pkg="rai_state_logs" exec="rai_state_logs_node" name="rai_state_logs_node" output="screen">
        <param name="max_lines" value="$(var max_lines)" />
        <param name="include_meta" value="$(var include_meta)" />
        <param name="clear_on_retrieval" value="$(var clear_on_retrieval)" />
    </node>
    <executable
        cmd="python src/examples/turtlebot4/turtlebot_demo.py --allowlist src/examples/turtlebot4/allowlist.txt"
        output="screen">
    </executable>
    <executable
        cmd="$(var game_launcher) -bg_ConnectToAssetProcessor=0"
        output="screen">
    </executable>
    <executable
        cmd="./run-nav.bash"
        cwd="src/examples/turtlebot4"
        output="screen">
    </executable>
    <executable
        cmd="rviz2 -d config.rviz"
        cwd="src/examples/turtlebot4"
        output="screen">
    </executable>
</launch>
