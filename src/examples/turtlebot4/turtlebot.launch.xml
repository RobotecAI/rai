<launch>
    <arg name="robot_description_package" default = ""/>
    <arg name="game_launcher" default = ""/>

    <node pkg="rai_whoami" exec="rai_whoami_node" name="rai_whoami_node" output="screen">
        <param name="robot_description_package" value="$(var robot_description_package)" />
    </node>
    <executable
        cmd="streamlit run src/rai_hmi/rai_hmi/text_hmi.py $(var robot_description_package)"
        output="screen">
    </executable>
    <executable
        cmd="python examples/turtlebot_demo.py"
        output="screen">
    </executable>
    <executable
        cmd="$(var game_launcher) -bg_ConnectToAssetProcessor=0"
        output="screen">
    </executable>
</launch>
