<launch>
    <arg name="robot_description_package" default = "quadruped_whoami"/>
    <arg name="inspection_freq" default = "2.0"/>

    <arg name="game_launcher" default = "src/examples/rai_quadruped_inspection/sim/QuadrupedInspectionDemo.GameLauncher"/>

    <node pkg="rai_whoami" exec="rai_whoami_node" name="rai_whoami_node" output="screen">
        <param name="robot_description_package" value="$(var robot_description_package)" />
    </node>
    <node pkg="rai_quadruped_inspection" exec="rai_quadruped_inspection_node" name="rai_quadruped_inspection_node" output="screen">
        <param name="inspection_freq" value="$(var inspection_freq)" />
    </node>
    <node name="rviz2" pkg="rviz2" exec="rviz2" args="-d src/examples/rai_quadruped_inspection/config.rviz" output="screen">
    </node>
    <executable
        cmd="$(var game_launcher) -bg_ConnectToAssetProcessor=0"
        output="screen">
    </executable>
</launch>
