<launch>
    <arg name="weights_path" default = ""/>
    <arg name="image_path" default="$./src/rai_grounding_dino/images/sample.jpg" />

    <node pkg="rai_grounding_dino" exec="grounding_dino" name="grounding_dino" output="screen">
        <param name="weights_path" value="$(var weights_path)" />
    </node>

    <node pkg="rai_grounding_dino" exec="talker" name="example_client" output="screen">
      <param name="image_path" value="$(var image_path)" />
    </node>
</launch>
